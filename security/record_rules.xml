<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Procedure: Users can only see their own company procedures -->
        <record id="rule_procedure_user" model="ir.rule">
            <field name="name">Procedure: User Company Rule</field>
            <field name="model_id" ref="model_procurement_procedure"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Procedure: Managers see all in their company -->
        <record id="rule_procedure_manager" model="ir.rule">
            <field name="name">Procedure: Manager Company Rule</field>
            <field name="model_id" ref="model_procurement_procedure"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Bidder: Company rule -->
        <record id="rule_bidder_user" model="ir.rule">
            <field name="name">Bidder: User Rule</field>
            <field name="model_id" ref="model_procurement_bidder"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Committee: Only members and managers can access -->
        <record id="rule_committee_member" model="ir.rule">
            <field name="name">Committee: Member Access Rule</field>
            <field name="model_id" ref="model_procurement_committee"/>
            <field name="domain_force">[('member_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_committee_member'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Committee: Manager full access -->
        <record id="rule_committee_manager" model="ir.rule">
            <field name="name">Committee: Manager Rule</field>
            <field name="model_id" ref="model_procurement_committee"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Evaluation: Committee members can only access evaluations they are assigned to -->
        <record id="rule_evaluation_committee" model="ir.rule">
            <field name="name">Evaluation: Committee Member Rule</field>
            <field name="model_id" ref="model_procurement_evaluation"/>
            <field name="domain_force">[('committee_id.member_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_committee_member'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Award: Company rule -->
        <record id="rule_award_company" model="ir.rule">
            <field name="name">Award: Company Rule</field>
            <field name="model_id" ref="model_procurement_award"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
