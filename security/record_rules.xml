<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Consultation: Users can only see their own company consultations -->
        <record id="rule_consultation_user" model="ir.rule">
            <field name="name">Consultation: User Company Rule</field>
            <field name="model_id" ref="model_procurement_consultation"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Consultation: Managers see all in their company -->
        <record id="rule_consultation_manager" model="ir.rule">
            <field name="name">Consultation: Manager Company Rule</field>
            <field name="model_id" ref="model_procurement_consultation"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Bid: Users see only published consultations bids -->
        <record id="rule_bid_user" model="ir.rule">
            <field name="name">Bid: User Rule</field>
            <field name="model_id" ref="model_procurement_bid"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Committee: Only members and managers can access -->
        <record id="rule_committee_member" model="ir.rule">
            <field name="name">Committee: Member Access Rule</field>
            <field name="model_id" ref="model_procurement_committee"/>
            <field name="domain_force">[('member_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_committee_member'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Evaluation: Committee members can only access evaluations they are assigned to -->
        <record id="rule_evaluation_committee" model="ir.rule">
            <field name="name">Evaluation: Committee Member Rule</field>
            <field name="model_id" ref="model_procurement_evaluation"/>
            <field name="domain_force">[('committee_id.member_ids.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_committee_member'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Contract: Company rule -->
        <record id="rule_contract_company" model="ir.rule">
            <field name="name">Contract: Company Rule</field>
            <field name="model_id" ref="model_procurement_contract"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Appeal: Company rule -->
        <record id="rule_appeal_company" model="ir.rule">
            <field name="name">Appeal: Company Rule</field>
            <field name="model_id" ref="model_procurement_appeal"/>
            <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
            <field name="groups" eval="[(4, ref('group_procurement_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

    </data>
</odoo>
