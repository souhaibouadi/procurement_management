<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_award_decision_arabic" model="ir.actions.report">
            <field name="name">Award Decision (Arabic)</field>
            <field name="model">procurement.decision</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">procurement_management.report_award_decision_arabic_document</field>
            <field name="report_file">procurement_management.report_award_decision_arabic_document</field>
            <field name="binding_model_id" ref="model_procurement_decision"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_award_decision_arabic_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page" dir="rtl" style="text-align: right; font-family: 'Traditional Arabic', 'Arial', sans-serif;">
                            <h3 class="text-center">قرار المنح</h3>
                            <p><strong>المرجع:</strong> <span t-field="doc.name"/></p>
                            <p><strong>التاريخ:</strong> <span t-field="doc.decision_date"/></p>
                            <p><strong>الإجراء:</strong> <span t-field="doc.procedure_id.name"/></p>
                            <hr/>
                            <div t-if="doc.legal_references">
                                <h5>المراجع القانونية</h5>
                                <p t-field="doc.legal_references"/>
                            </div>
                            <div t-if="doc.decision_body">
                                <h5>القرار</h5>
                                <p t-field="doc.decision_body"/>
                            </div>
                            <div t-if="doc.awarded_bidder_id">
                                <br/>
                                <h5>المتعامل الفائز</h5>
                                <p><span t-field="doc.awarded_bidder_id.name"/></p>
                                <p t-if="doc.award_amount"><strong>مبلغ المنح:</strong> <span t-field="doc.award_amount"/> د.ج</p>
                            </div>
                            <br/>
                            <div class="text-left mt-5">
                                <p t-if="doc.signatory_id"><span t-field="doc.signatory_id.name"/></p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
