                            <thead><tr>
                                <th>&#1575;&#1604;&#1578;&#1593;&#1610;&#1610;&#1606;</th>
                                <th>&#1575;&#1604;&#1601;&#1575;&#1574;&#1586;</th>
                                <th>&#1575;&#1604;&#1585;&#1602;&#1605; &#1575;&#1604;&#1580;&#1576;&#1575;&#1574;&#1610;</th>
