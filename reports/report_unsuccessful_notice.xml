<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="report_unsuccessful_notice" model="ir.actions.report">
            <field name="name">Unsuccessful Bidder Notice</field>
            <field name="model">procurement.bidder</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">procurement_management.report_unsuccessful_notice_document</field>
            <field name="report_file">procurement_management.report_unsuccessful_notice_document</field>
            <field name="binding_model_id" ref="model_procurement_bidder"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_unsuccessful_notice_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h3 class="text-center">NOTICE TO UNSUCCESSFUL BIDDER</h3>
                            <br/>
                            <p><strong>To:</strong> <span t-field="doc.partner_id.name"/></p>
                            <p><strong>Procedure:</strong> <span t-field="doc.procedure_id.name"/></p>
                            <p><strong>Date:</strong> <span t-esc="context_today().strftime('%Y-%m-%d')"/></p>
                            <hr/>
                            <p>
                                Dear <span t-field="doc.partner_id.name"/>,
                            </p>
                            <p>
                                We regret to inform you that your bid for the above-referenced procurement procedure
                                has not been selected.
                            </p>
                            <div t-if="doc.rejection_reason">
                                <p><strong>Reason:</strong></p>
                                <p t-field="doc.rejection_reason"/>
                            </div>
                            <p>
                                In accordance with applicable regulations, you have the right to submit
                                a complaint within the legally prescribed timeframe.
                            </p>
                            <p>
                                We thank you for your participation and interest.
                            </p>
                            <br/>
                            <div class="text-right mt-5">
                                <p>The Contracting Authority</p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
