<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_provisional_award_notice" model="ir.actions.report">
        <field name="name">Provisional Award Notice</field>
        <field name="model">procurement.award</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">procurement_management.report_provisional_award_notice_document</field>
        <field name="report_file">procurement_management.report_provisional_award_notice_document</field>
        <field name="binding_model_id" ref="model_procurement_award"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_provisional_award_notice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center">PROVISIONAL AWARD NOTICE</h2>
                        <h4 class="text-center" t-field="doc.name"/>
                        <br/>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Designation</th>
                                    <th>Awardee</th>
                                    <th>NIF</th>
                                    <th>Score</th>
                                    <th>Amount Incl. Tax (DZD)</th>
                                    <th>Delay</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td t-field="doc.designation"/>
                                    <td t-field="doc.bidder_id.partner_id.name"/>
                                    <td t-field="doc.bidder_id.tax_id_number"/>
                                    <td t-field="doc.obtained_score"/>
                                    <td t-field="doc.award_amount_incl_tax"/>
                                    <td t-field="doc.execution_delay"/>
                                </tr>
                            </tbody>
                        </table>
                        <div class="mt-3" t-if="doc.appeal_start_date">
                            <p><strong>Appeal Period:</strong> From <span t-field="doc.appeal_start_date"/> to <span t-field="doc.appeal_end_date"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
