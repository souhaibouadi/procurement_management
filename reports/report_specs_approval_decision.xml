<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_specs_approval_decision" model="ir.actions.report">
        <field name="name">Specifications Approval Decision</field>
        <field name="model">procurement.decision</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">procurement_management.report_specs_approval_decision_document</field>
        <field name="report_file">procurement_management.report_specs_approval_decision_document</field>
        <field name="binding_model_id" ref="model_procurement_decision"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_specs_approval_decision_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h3 class="text-center">SPECIFICATIONS APPROVAL DECISION</h3>
                        <p><strong>Reference:</strong> <span t-field="doc.name"/></p>
                        <p><strong>Date:</strong> <span t-field="doc.decision_date"/></p>
                        <hr/>
                        <div t-if="doc.legal_references">
                            <p t-field="doc.legal_references"/>
                        </div>
                        <div t-if="doc.decision_body">
                            <p t-field="doc.decision_body"/>
                        </div>
                        <br/>
                        <div class="text-right mt-5">
                            <p t-if="doc.signatory_id"><span t-field="doc.signatory_id.name"/></p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
