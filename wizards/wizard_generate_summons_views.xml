<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Generate Summons Wizard Form View -->
    <record id="view_wizard_generate_summons_form" model="ir.ui.view">
        <field name="name">procurement.wizard.generate.summons.form</field>
        <field name="model">procurement.wizard.generate.summons</field>
        <field name="arch" type="xml">
            <form string="Generate Summons">
                <group>
                    <group>
                        <field name="session_id" required="1" options="{'no_create': True}"/>
                        <field name="session_date" readonly="1"/>
                        <field name="session_type" readonly="1"/>
                    </group>
                    <group>
                        <field name="summons_date" required="1"/>
                        <field name="send_email"/>
                        <field name="include_agenda"/>
                    </group>
                </group>
                <group string="Members to Summon">
                    <field name="member_ids" widget="many2many_tags" options="{'no_create': True}"/>
                </group>
                <group string="Additional Message">
                    <field name="additional_message" placeholder="Additional message for the summons..."/>
                </group>
                <footer>
                    <button name="action_generate" string="Generate Summons" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Generate Summons Wizard Action -->
    <record id="action_wizard_generate_summons" model="ir.actions.act_window">
        <field name="name">Generate Summons</field>
        <field name="res_model">procurement.wizard.generate.summons</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="procurement_management.model_procurement_session"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>
