<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Order Form View -->
    <record id="view_service_order_form" model="ir.ui.view">
        <field name="name">procurement.service.order.form</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <form string="Service Order">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" states="cancelled" class="btn-secondary"/>
                    <button name="action_confirm" string="Confirm" type="object" states="draft" class="btn-primary"/>
                    <button name="action_start" string="Start Execution" type="object" states="confirmed" class="btn-primary"/>
                    <button name="action_complete" string="Complete" type="object" states="in_progress" class="btn-success"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,confirmed" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_purchase_orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="purchase_order_count" widget="statinfo" string="PO"/>
                        </button>
                        <button name="action_view_invoices" type="object" class="oe_stat_button" icon="fa-money">
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="procedure_id" options="{'no_create': True}" required="1"/>
                            <field name="award_id" options="{'no_create': True}"/>
                            <field name="partner_id" options="{'no_create': True}" required="1"/>
                            <field name="order_date" required="1"/>
                        </group>
                        <group>
                            <field name="execution_start_date"/>
                            <field name="execution_end_date"/>
                            <field name="delivery_address"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" options="{'no_create': True}"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="uom_id" groups="uom.group_uom"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="tax_ids" widget="many2many_tags"/>
                                    <field name="subtotal" widget="monetary"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="amount_untaxed" widget="monetary"/>
                                <field name="amount_tax" widget="monetary"/>
                                <field name="amount_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                            </group>
                        </page>
                        <page string="Execution" name="execution">
                            <group>
                                <group>
                                    <field name="execution_percentage" widget="progressbar"/>
                                    <field name="actual_start_date"/>
                                    <field name="actual_end_date"/>
                                </group>
                                <group>
                                    <field name="delay_days"/>
                                    <field name="penalty_amount" widget="monetary"/>
                                </group>
                            </group>
                            <field name="execution_notes" placeholder="Execution notes..."/>
                        </page>
                        <page string="Payment Terms" name="payment">
                            <group>
                                <group>
                                    <field name="payment_term_id" options="{'no_create': True}"/>
                                    <field name="advance_payment_percentage"/>
                                    <field name="retention_percentage"/>
                                </group>
                                <group>
                                    <field name="guarantee_amount" widget="monetary"/>
                                    <field name="guarantee_date"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Service Order Tree View -->
    <record id="view_service_order_tree" model="ir.ui.view">
        <field name="name">procurement.service.order.tree</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <tree string="Service Orders" decoration-info="state=='draft'" decoration-primary="state=='confirmed'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="partner_id"/>
                <field name="order_date"/>
                <field name="amount_total" widget="monetary" sum="Total"/>
                <field name="execution_percentage" widget="progressbar"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-primary="state=='confirmed'" decoration-warning="state=='in_progress'" decoration-success="state=='completed'"/>
            </tree>
        </field>
    </record>

    <!-- Service Order Search View -->
    <record id="view_service_order_search" model="ir.ui.view">
        <field name="name">procurement.service.order.search</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <search string="Search Service Orders">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="partner_id"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="filter_completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <separator/>
                <filter name="filter_delayed" string="Delayed" domain="[('delay_days', '>', 0)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_procedure" string="Procedure" context="{'group_by': 'procedure_id'}"/>
                    <filter name="group_partner" string="Supplier" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                    <filter name="group_date" string="Order Date" context="{'group_by': 'order_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Order Action -->
    <record id="action_service_order" model="ir.actions.act_window">
        <field name="name">Service Orders</field>
        <field name="res_model">procurement.service.order</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_service_order_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service order
            </p>
            <p>
                Service orders manage the execution of awarded procurement contracts.
            </p>
        </field>
    </record>
</odoo>
