<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Order Form View -->
    <record id="view_service_order_form" model="ir.ui.view">
        <field name="name">procurement.service.order.form</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <form string="Service Order">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'" class="btn-secondary"/>
                    <button name="action_confirm" string="Confirm" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_start" string="Start Execution" type="object" invisible="state != 'confirmed'" class="btn-primary"/>
                    <button name="action_complete" string="Complete" type="object" invisible="state != 'in_progress'" class="btn-success"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'confirmed']" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Order Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="procedure_id" options="{'no_create': True}"/>
                            <field name="operation"/>
                            <field name="contractor_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="contract_reference"/>
                            <field name="contract_date"/>
                            <field name="execution_delay"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Details" name="details">
                            <group>
                                <field name="order_subject"/>
                                <field name="order_body"/>
                            </group>
                        </page>
                        <page string="Notification" name="notification">
                            <group>
                                <group>
                                    <field name="register_number"/>
                                    <field name="notification_date"/>
                                </group>
                                <group>
                                    <field name="notification_address"/>
                                </group>
                            </group>
                        </page>
                        <page string="Handover" name="handover">
                            <group>
                                <group>
                                    <field name="service_signatory_id" options="{'no_create': True}"/>
                                    <field name="handover_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Order Tree View -->
    <record id="view_service_order_tree" model="ir.ui.view">
        <field name="name">procurement.service.order.tree</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <tree string="Service Orders" decoration-info="state == 'draft'" decoration-primary="state == 'confirmed'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="contractor_id"/>
                <field name="contract_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state == 'confirmed'" decoration-warning="state == 'in_progress'" decoration-success="state == 'completed'"/>
            </tree>
        </field>
    </record>

    <!-- Service Order Search View -->
    <record id="view_service_order_search" model="ir.ui.view">
        <field name="name">procurement.service.order.search</field>
        <field name="model">procurement.service.order</field>
        <field name="arch" type="xml">
            <search string="Search Service Orders">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="contractor_id"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="filter_completed" string="Completed" domain="[('state', '=', 'completed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_procedure" string="Procedure" context="{'group_by': 'procedure_id'}"/>
                    <filter name="group_contractor" string="Contractor" context="{'group_by': 'contractor_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Order Action -->
    <record id="action_service_order" model="ir.actions.act_window">
        <field name="name">Service Orders</field>
        <field name="res_model">procurement.service.order</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_service_order_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service order
            </p>
            <p>
                Service orders manage the execution of awarded procurement contracts.
            </p>
        </field>
    </record>
</odoo>
