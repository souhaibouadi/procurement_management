<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Order Letter Form View -->
    <record id="view_order_letter_form" model="ir.ui.view">
        <field name="name">procurement.order.letter.form</field>
        <field name="model">procurement.order.letter</field>
        <field name="arch" type="xml">
            <form string="Order Letter">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'" class="btn-secondary"/>
                    <button name="action_send" string="Send" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_acknowledge" string="Acknowledge Receipt" type="object" invisible="state != 'sent'" class="btn-primary"/>
                    <button name="action_execute" string="Start Execution" type="object" invisible="state != 'acknowledged'" class="btn-success"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'sent']" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,acknowledged,executed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="procedure_id" options="{'no_create': True}"/>
                            <field name="operation"/>
                            <field name="contract_reference"/>
                        </group>
                        <group>
                            <field name="recipient_id" options="{'no_create': True}"/>
                            <field name="signatory_id" options="{'no_create': True}"/>
                            <field name="letter_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content" name="content">
                            <group>
                                <field name="letter_subject"/>
                            </group>
                        </page>
                        <page string="Service Lines" name="lines">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Order Letter Tree View -->
    <record id="view_order_letter_tree" model="ir.ui.view">
        <field name="name">procurement.order.letter.tree</field>
        <field name="model">procurement.order.letter</field>
        <field name="arch" type="xml">
            <tree string="Order Letters" decoration-info="state == 'draft'" decoration-primary="state == 'sent'" decoration-warning="state == 'acknowledged'" decoration-success="state == 'executed'">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="recipient_id"/>
                <field name="letter_date"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-primary="state == 'sent'" decoration-warning="state == 'acknowledged'" decoration-success="state == 'executed'"/>
            </tree>
        </field>
    </record>

    <!-- Order Letter Search View -->
    <record id="view_order_letter_search" model="ir.ui.view">
        <field name="name">procurement.order.letter.search</field>
        <field name="model">procurement.order.letter</field>
        <field name="arch" type="xml">
            <search string="Search Order Letters">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="recipient_id"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_sent" string="Sent" domain="[('state', '=', 'sent')]"/>
                <filter name="filter_acknowledged" string="Acknowledged" domain="[('state', '=', 'acknowledged')]"/>
                <filter name="filter_executed" string="Executed" domain="[('state', '=', 'executed')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_procedure" string="Procedure" context="{'group_by': 'procedure_id'}"/>
                    <filter name="group_recipient" string="Recipient" context="{'group_by': 'recipient_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Order Letter Action -->
    <record id="action_order_letter" model="ir.actions.act_window">
        <field name="name">Order Letters</field>
        <field name="res_model">procurement.order.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_order_letter_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new order letter
            </p>
            <p>
                Order letters formally communicate award decisions to winning bidders.
            </p>
        </field>
    </record>
</odoo>
