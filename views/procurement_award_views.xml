<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_procurement_award_form" model="ir.ui.view">
        <field name="name">procurement.award.form</field>
        <field name="model">procurement.award</field>
        <field name="arch" type="xml">
            <form string="Award">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_publish" string="Publish" type="object" class="btn-primary" invisible="state != 'confirmed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,published"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="procedure_id"/>
                            <field name="award_type"/>
                            <field name="award_date"/>
                        </group>
                        <group>
                            <field name="awarded_bidder_id"/>
                            <field name="awarded_amount"/>
                            <field name="appeal_deadline"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_procurement_award_tree" model="ir.ui.view">
        <field name="name">procurement.award.tree</field>
        <field name="model">procurement.award</field>
        <field name="arch" type="xml">
            <tree string="Awards">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="award_type"/>
                <field name="awarded_bidder_id"/>
                <field name="awarded_amount"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="action_procurement_award" model="ir.actions.act_window">
        <field name="name">Awards</field>
        <field name="res_model">procurement.award</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
