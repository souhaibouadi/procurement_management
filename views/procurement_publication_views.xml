<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_procurement_publication_form" model="ir.ui.view">
        <field name="name">procurement.publication.form</field>
        <field name="model">procurement.publication</field>
        <field name="arch" type="xml">
            <form string="Publication">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="procedure_id"/>
                            <field name="media_type"/>
                        </group>
                        <group>
                            <field name="publication_date"/>
                            <field name="reference"/>
                        </group>
                    </group>
                    <group string="Content">
                        <field name="content" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_procurement_publication_tree" model="ir.ui.view">
        <field name="name">procurement.publication.tree</field>
        <field name="model">procurement.publication</field>
        <field name="arch" type="xml">
            <tree string="Publications">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="media_type"/>
                <field name="publication_date"/>
            </tree>
        </field>
    </record>

    <record id="action_procurement_publication" model="ir.actions.act_window">
        <field name="name">Publications</field>
        <field name="res_model">procurement.publication</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
