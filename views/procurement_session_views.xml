<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Session Form View -->
    <record id="view_procurement_session_form" model="ir.ui.view">
        <field name="name">procurement.committee.session.form</field>
        <field name="model">procurement.committee.session</field>
        <field name="arch" type="xml">
            <form string="Committee Session">
                <header>
                    <button name="action_summon" string="Send Summons" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_hold" string="Hold Session" type="object" class="btn-primary" invisible="state != 'summoned'"/>
                    <button name="action_close" string="Close Session" type="object" class="btn-success" invisible="state != 'held'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,summoned,held,closed"/>
                </header>
                <sheet>
                    <group>
                        <group string="Session Information">
                            <field name="name"/>
                            <field name="procedure_id"/>
                            <field name="committee_id"/>
                            <field name="session_date"/>
                            <field name="location"/>
                        </group>
                        <group string="Minutes">
                            <field name="minutes_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Agenda Items">
                            <field name="agenda_item_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="reporter_id"/>
                                    <field name="linked_procedure_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Summons">
                            <field name="summons_ids">
                                <tree>
                                    <field name="member_id"/>
                                    <field name="sent_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Session Tree View -->
    <record id="view_procurement_session_tree" model="ir.ui.view">
        <field name="name">procurement.committee.session.tree</field>
        <field name="model">procurement.committee.session</field>
        <field name="arch" type="xml">
            <tree string="Sessions">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="committee_id"/>
                <field name="session_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Session Action -->
    <record id="action_procurement_session" model="ir.actions.act_window">
        <field name="name">Committee Sessions</field>
        <field name="res_model">procurement.committee.session</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new committee session</p>
        </field>
    </record>

</odoo>
