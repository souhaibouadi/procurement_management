<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Procurement Minutes Form View -->
    <record id="view_procurement_minutes_form" model="ir.ui.view">
        <field name="name">procurement.minutes.form</field>
        <field name="model">procurement.minutes</field>
        <field name="arch" type="xml">
            <form string="Minutes">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" invisible="state != 'cancelled'" class="btn-secondary"/>
                    <button name="action_validate" string="Validate" type="object" invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_approve" string="Approve" type="object" invisible="state != 'validated'" class="btn-primary" groups="procurement_management.group_procurement_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft', 'validated']" class="btn-secondary" confirm="Are you sure you want to cancel this minutes?"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="procedure_id"/>
                            <field name="committee_id"/>
                            <field name="minutes_type"/>
                        </group>
                        <group>
                            <field name="minutes_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Content">
                            <field name="content" nolabel="1"/>
                        </page>
                        <page string="Findings">
                            <field name="findings" nolabel="1"/>
                        </page>
                        <page string="Reservations">
                            <field name="reservations" nolabel="1"/>
                        </page>
                        <page string="Attendees">
                            <field name="attendee_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Signatories">
                            <field name="signatory_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Procurement Minutes Tree View -->
    <record id="view_procurement_minutes_tree" model="ir.ui.view">
        <field name="name">procurement.minutes.tree</field>
        <field name="model">procurement.minutes</field>
        <field name="arch" type="xml">
            <tree string="Minutes">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="minutes_type"/>
                <field name="minutes_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <!-- Procurement Minutes Action -->
    <record id="action_procurement_minutes" model="ir.actions.act_window">
        <field name="name">Minutes</field>
        <field name="res_model">procurement.minutes</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
