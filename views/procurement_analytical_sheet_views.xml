<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Analytical Sheet Form View -->
    <record id="view_analytical_sheet_form" model="ir.ui.view">
        <field name="name">procurement.analytical.sheet.form</field>
        <field name="model">procurement.analytical.sheet</field>
        <field name="arch" type="xml">
            <form string="Analytical Sheet">
                <header>
                    <button name="action_draft" string="Reset to Draft" type="object" states="cancelled" class="btn-secondary"/>
                    <button name="action_validate" string="Validate" type="object" states="draft" class="btn-primary"/>
                    <button name="action_approve" string="Approve" type="object" states="validated" class="btn-primary" groups="procurement_management.group_procurement_manager"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,validated" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validated,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="procedure_id" options="{'no_create': True}"/>
                            <field name="committee_session_ref"/>
                            <field name="session_date"/>
                            <field name="contracting_authority"/>
                        </group>
                        <group>
                            <field name="contractor_partner_id" options="{'no_create': True}"/>
                            <field name="provisional_awardee_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contract Details" name="contract">
                            <group>
                                <field name="contract_subject"/>
                                <field name="procurement_method"/>
                                <field name="legal_basis"/>
                                <field name="reference_documents"/>
                            </group>
                        </page>
                        <page string="Financial" name="financial">
                            <group>
                                <group>
                                    <field name="amount_excl_tax"/>
                                    <field name="amount_excl_tax_words"/>
                                </group>
                                <group>
                                    <field name="amount_incl_tax"/>
                                    <field name="amount_incl_tax_words"/>
                                </group>
                            </group>
                            <group>
                                <group>
                                    <field name="allocated_budget"/>
                                    <field name="administrative_estimate"/>
                                </group>
                            </group>
                        </page>
                        <page string="Specifications" name="specs">
                            <group>
                                <group>
                                    <field name="specs_approval_ref"/>
                                    <field name="specs_approval_date"/>
                                </group>
                                <group>
                                    <field name="publication_journals"/>
                                    <field name="preparation_days"/>
                                </group>
                            </group>
                        </page>
                        <page string="Bids" name="bids">
                            <group>
                                <group>
                                    <field name="specs_withdrawn_count"/>
                                    <field name="envelopes_received_count"/>
                                </group>
                            </group>
                            <group>
                                <field name="envelopes_detail"/>
                            </group>
                        </page>
                        <page string="Evaluation" name="evaluation">
                            <group>
                                <field name="preliminary_exam_result"/>
                                <field name="retained_bidders"/>
                                <field name="excluded_bidders"/>
                                <field name="final_ranking"/>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Analytical Sheet Tree View -->
    <record id="view_analytical_sheet_tree" model="ir.ui.view">
        <field name="name">procurement.analytical.sheet.tree</field>
        <field name="model">procurement.analytical.sheet</field>
        <field name="arch" type="xml">
            <tree string="Analytical Sheets" decoration-info="state=='draft'" decoration-warning="state=='validated'" decoration-success="state=='approved'">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="session_date"/>
                <field name="contractor_partner_id"/>
                <field name="amount_incl_tax"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='validated'" decoration-success="state=='approved'"/>
            </tree>
        </field>
    </record>

    <!-- Analytical Sheet Search View -->
    <record id="view_analytical_sheet_search" model="ir.ui.view">
        <field name="name">procurement.analytical.sheet.search</field>
        <field name="model">procurement.analytical.sheet</field>
        <field name="arch" type="xml">
            <search string="Search Analytical Sheets">
                <field name="name"/>
                <field name="procedure_id"/>
                <field name="contractor_partner_id"/>
                <separator/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_validated" string="Validated" domain="[('state', '=', 'validated')]"/>
                <filter name="filter_approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_procedure" string="Procedure" context="{'group_by': 'procedure_id'}"/>
                    <filter name="group_state" string="State" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Analytical Sheet Action -->
    <record id="action_analytical_sheet" model="ir.actions.act_window">
        <field name="name">Analytical Sheets</field>
        <field name="res_model">procurement.analytical.sheet</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_analytical_sheet_search"/>
        <field name="context">{'search_default_filter_draft': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new analytical sheet
            </p>
            <p>
                Analytical sheets provide detailed analysis for procurement award decisions.
            </p>
        </field>
    </record>
</odoo>
